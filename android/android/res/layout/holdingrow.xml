<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:longClickable="true"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/simpletextview"
            android:layout_weight="1"></TextView>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vormerken/bestellen"
            xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/holdingbutton"
            android:singleLine="true" android:layout_weight="0" android:layout_gravity="center_vertical"></Button>
</LinearLayout>