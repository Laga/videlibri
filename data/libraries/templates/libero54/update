   <fieldset id="issued_items">
     <htmlparser:read var="delete-current-books()"/>
     <table>
       <thead><tr><th id="th1_1" class="barcode" abbr="bc" scope="col"></th>
                  <th id="th1_2" class="titleVolRef" abbr="tit" scope="col"></th>
                  <th id="th1_3" class="author" abbr="aut" scope="col"></th>
                  <th id="th1_4" class="dueDate" abbr="due" scope="col"></th>
                  <th id="th1_5" class="numRenewals" abbr="num" scope="col"></th>
                  <th id="th1_7" class="renew" abbr="ren" scope="col"></th></tr></thead>
                  
       <htmlparser:loop>
       <tbody>
       <htmlparser:read var="book-start()"/>
       <tr>
          <htmlparser:read var="book.extendid" source="''"/>
          <th class="barcode" headers="th1_1"><htmlparser:read source="text()" var="book.id"/></th>
          <td headers="th1_2">
            <htmlparser:read source="text()" var="book.title"/>
            <br htmlparser-optional="true"/>
            <htmlparser:read source="deepNodeText()" var="temporaryStatusDetails"/>
          </td>
          <td headers="th1_3"><htmlparser:read source="text()" var="book.author"/></td>
          <td headers="th1_4"><htmlparser:read source="text()" var="book.limitdate:d mmm yyyy"/></td>
          <td headers="th1_5"><htmlparser:read source="concat('bisher ',text(), ' mal verlängert')" var="book.status:curious"/></td>
          <td headers="th1_7">
            <label htmlparser-optional="true"/>
            <input htmlparser-optional="true"><htmlparser:read var="book.extendid" source="@name"/></input>
          </td>
          <htmlparser:if test="'$book.extendid;'==''">
            <htmlparser:read var="book.status:problematic" source="'$temporaryStatusDetails;'"/>
          </htmlparser:if>
       </tr>
       <htmlparser:read var="book-end()"/>
       </tbody>
       </htmlparser:loop>
     </table>

     <input type="hidden" name="mid">
       <htmlparser:read var="mid" source="@value"/>
     </input>
