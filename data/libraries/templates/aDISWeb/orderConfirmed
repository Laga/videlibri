<form>{
  let $message := string-join(css(".message,.alert,.hinweis")!inner-text()),
      $submits := .//input[@type="submit"],
      $submit := ($submits[contains(@value, "bestellen")],$submits)[1]
  return 
  if (matches($message, "(ist +erfolgt|AuÃŸenmagazinbestellung fÃ¼r.*:)")) then ( final-form := form(., $submit), form := () )
  else if (count($submits) eq 1 and $message ne "") then vl:raise($message)
  else form := form(., $submit)
}</form>
