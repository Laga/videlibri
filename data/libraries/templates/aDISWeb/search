                let $temp := extract(., "(([0-9]+)[^0-9]+([0-9]+)[^0-9]+)?([0-9]+)$", (2,4)) return ( 
                  $firstIndex := number($temp[1]),
                  (:$lastIndex := $temp[2],:)
                  $search-result-count := xs:integer($temp[2])),  
                lastSearchedIndex := get("lastSearchedIndex", 0) (: for unittests :)</t:s></SPAN>
            </P>
