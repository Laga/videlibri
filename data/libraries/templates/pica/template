</meta>


<action id="connect">
 <!-- <page url="https://kataloge.uni-hamburg.de:443/loan/DB=1/USERINFO" templateFile="start">
    <post name="ACT" value="UI_DATA"/>
    <post name="HOST_NAME"/>
    <post name="HOST_PORT"/>
