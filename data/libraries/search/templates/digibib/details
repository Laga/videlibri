<html><head></head><body>

<t:switch prioritized="true">

<div class="contentblock">
<dl>
  <dt>Bibliographische Angaben</dt>
  <dd>

      <p class="coverimg" t:optional="true">
        <t:s>
          book.amazon-url:=a/@href,
          book.image-url:=.//img/@src
        </t:s>
      </p>
    
         
      <table class="datarows"><t:loop>
        <tr>
         <th>{currentfield := concat(normalize-space(text()), "!")}</th>
         <t:if   test="contains($currentfield, 'Titel') and not(contains($currentfield, 'Einheitssachtitel'))">{currentfield := "title"}</t:if>
         <t:else test="contains($currentfield, 'Autor')">{currentfield := "author"}</t:else>
         <t:else test="contains($currentfield, 'ISBN')" >{currentfield := "isbn"}</t:else>
         <t:else test="contains($currentfield, 'Jahr')" >{currentfield := "year"}</t:else>
         <td><t:read source="deep-text()" var="book.{$currentfield}"/></td>
        </tr>
      </t:loop></table>
   </dd>

   <dt t:optional="true">Bestand</dt>      
   <td t:optional="true">
     <template:loop>
       <a template:optional="true"><template:read var="book.home-url" source="@href"/></a>
     </template:loop>
     <form template:optional="true">
       <template:read var="book.home-url" source="concat(@action,'?')"/>
       <template:loop>
          <input><template:read var="book.home-url" source="concat($book.home-url,@name,'=',@value,'&')"/></input>
       </template:loop>
     </form>
   </td>
   
</dl>
</div>

         <div class="contentpadding">
           <p class="warning">{vl:raise("Digibib-System: " || .)}</p>  
         </div>

</t:switch>

</body>
</html>
    

